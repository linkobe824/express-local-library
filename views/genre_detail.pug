extends layout 

block content 
  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px;margin-right:10rem')
    h4 Books 

    dl 
      each book in genre_books 
        dt 
          a(href=book.url)   #{book.title}
        dd #{book.summary}  
      else 
        p This genre has no books
  
    hr
    p 
      a.btn.btn-warning(href=genre.url+'/delete') Delete genre
      a.btn.btn-primary(style='margin-left:1rem' href=genre.url+'/update') Update genre
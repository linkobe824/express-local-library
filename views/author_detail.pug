extends layout 

block content 
  h1 Author: #{author.name}
  p #{author.lifespan}

  div(style="margin-left:20px;margin-top:20px;margin-right:10rem")
    h4 Books

    dl 
      each book in author_books 
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary} 
      else 
        p This author has no books.
  
    hr
    p 
      a.btn.btn-warning(href=author.url+'/delete') Delete author
      a.btn.btn-primary(style='margin-left:1rem')(href=author.url+'/update') Update author